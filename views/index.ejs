<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Good News Blog</title>
    <link rel="stylesheet" href="/styles/main.css">
  </head>
  <body>
    <div class="container">
      <h1>The Good News Blog</h1>
      <a id="newPostBtn" href="/new">New Post</a>
      <ul id="postsList">
        <% posts.forEach(post=> { %>
          <li>
            <h2>
              <%=post.title%>
            </h2>
            <small>
              <%=post.date %>
            </small>
            <p>
              <%=post.content%>
            </p>
            <small>By: <%=post.author%> </small>
            <small>Source: <%=post.source%> </small>
            <a class="edit auth" href="/edit/<%= post.id %>">Edit</a>
            <a class="delete auth" href="/api/posts/delete/<%= post.id %>">Delete</a>
          </li>
          <% }); %>
      </ul>
    </div>
    <script src="/auth.js"></script>
  </body>
</html>